.header
    clearfix()
    max-width: $container-width
    margin: 2em auto
    border-bottom: 3px solid $main-yellow
        
    &-left
        float: left
        margin-right: $gutter        
        width: 110px

        .header-logo
            height: 110px
            width: 110px
            background-image: url('../images/logo.png')
            background-size: contain
            margin-right: 3.25em

    &-right
        width: 'calc(100% - 110px - %s * 2)' % $gutter
        margin-left: $gutter
        float: left
        
        .header-info
            clearfix()

            >div
                // display: inline-block
                width: 'calc((100% - %s * 4) / 4)' % $gutter
                margin-right: $gutter
                float: left

                &:last-child
                    margin-right: 0
                    float: right

            .first-tel
                &__icon
                    margin-right: 0.625em
                    
                    font-size: 0.625rem
                    color: $main-yellow

                &__callback
                    font-size: 0.75rem                    
                    color: $main-yellow
                    
                    border-bottom: 1px dashed $main-yellow

                    &:hover
                    &:active
                        border-bottom-width: 0px 

            .first-tel
            .second-tel
                &__caption
                    font-size: 0.75rem
                    margin-bottom: 0

                &__tel
                    display: block

                    font-size: 1.375rem
                    color: #fff
                
            .delivery
                
                &__text
                    display: inline-block
                    border: 1px solid $main-yellow
                    color: $main-yellow
                    font-weight: bold
                    padding: 0.75em 0.875em
            
            .ecommerce
                .wishlist
                    float: left
                    
                    margin-right: 1.25em

                    &__icon
                        display: block
                        float: left
                        position: relative
                        top: 0.3em

                        font-size: 1.5rem
                        // height: 3rem
                        // width: 3rem
                        // background-image: url('../images/heart.svg')
                        // background-repeat: no-repeat

                .cart
                    position: relative
                    width: calc(100% - 3rem)
                    float: left
                    padding-bottom: 1em
                    
                    &-icon
                        position: relative
                        float: left     

                        margin-right: 1em               

                        &__icon
                            display: block
                            position: relative
                            top: 0.3em

                            font-size: 1.5rem
                            
                            // height: 3rem
                            // width: 3rem
                            // background-image: url('../images/cart.svg')
                            // background-repeat: no-repeat                        
                            
                        &__quantity
                            font-size: 0.6rem
                            position: absolute
                            top: 0.1em
                            right: -0.5em
                            height: 1rem
                            width: 1rem
                            background-color: $main-yellow
                            border-radius: 5rem
                            padding: 0.1em 0.5em
                            color: #111

                    &__text
                        color: #fff
                        font-weight: bold
                    
                    &__sum
                        font-size: 0.75rem

                    .cart-popup
                        visibility: hidden
                        opacity: 0
                        transition: visibility 0s, opacity 0.1s linear
                        position: absolute
                        z-index: 1001
                        right: 0
                        top: 3rem
                        width: 17rem
                        background: $body-background
                        border: 1px solid $separator-color
                        box-shadow: 0 3px 7px rgba(0,0,0,0.5)

                        a
                            transition: visibility 0s, opacity 0.2s
                        
                        &::before
                            content: ''
                            position: absolute
                            left: 50%
                            top: -0.25rem
                            width: 0.5rem
                            height: 0.5rem
                            transform: translateX(-50%)
                            transform: rotate(45deg)
                            background: $body-background
                            border-left: 1px solid $separator-color
                            border-top: 1px solid $separator-color
                            

                        &__heading
                            color: $heading-color
                            font-weight: bold
                            text-align: center
                            padding: 1em 0
                            border-bottom: 1px solid $separator-color
                            margin-bottom: 0.5em
                            
                        &-item
                            clearfix()

                            position: relative
                            padding: 0.5em 1em
                            
                            &__cover
                                width: 3rem
                                float: left
                                margin-right: 1em
                                
                            &__title
                                color: $heading-color
                                font-weight: bold

                            &__quantity
                                font-size: 0.75rem

                            &__delete-button
                                color: #fff
                                font-size: 0.875rem
                                position: absolute
                                right: 1em
                                top: 1em
                                
                        &-totals
                            clearfix()

                            text-align: center
                            font-weight: bold
                            color: #fff
                            border-top: 1px solid $separator-color
                            border-bottom: 1px solid $separator-color
                            margin-top: 0.5em
                            margin-bottom: 1em

                            div
                                width: 50%
                                float: left
                                padding: 1em 0em
                                
                                &:first-child
                                    border-right: 1px solid $separator-color
                        &-buttons
                            padding: 0 1em 1em
                            text-align: center

                            &__cart-link
                                display: block
                                color: $main-yellow
                                text-transform: uppercase
                                font-size: 0.75rem
                                margin-bottom: 1.25em

                            &__checkout-button
                                display: block
                                width: 100%
                        
                        &--active
                            visibility: visible
                            opacity: 1
                            
